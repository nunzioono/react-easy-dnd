{
  "compilerOptions": {
    "outDir": "./dist",             // Output directory for JS files
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "ESNext",
    "target": "ES2016",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["core/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]// Files to exclude
}
